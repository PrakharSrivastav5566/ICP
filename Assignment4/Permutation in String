class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int ans=0;
        string k;
        for(int i=0;i<s.size();i++) {
            if(k.find(s[i])!=std::string::npos) {
                k=k.substr(k.find(s[i])+1);
            }
            k=k+s[i];
            ans=max(ans,static_cast<int>(k.size()));
        }
        return ans;
    }
};
